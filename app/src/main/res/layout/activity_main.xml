<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    android:background="#f7fafd">

    <TextView
        android:id="@+id/explanation_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="So sánh tối ưu/không tối ưu animation (Bar Chart)"
        android:layout_marginBottom="12dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#1a237e"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:overScrollMode="never"
        android:background="#e3e6ef"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="8dp"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/views_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <Button
        android:id="@+id/btn_bad_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animation chưa tối ưu (Thay layoutParams)"
        android:textAllCaps="false"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_good_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animation tối ưu (scaleY property)"
        android:textAllCaps="false"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>
</LinearLayout>